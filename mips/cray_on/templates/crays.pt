<metal:main use-macro="load: layout.pt" >
  <div class="col-md-9" metal:fill-slot="content">
    <article >
      <div tal:repeat="manager managers">
	<h2>${manager['name'].title()}</h2>
	<table class="table table-bordered table-striped">
	  <thead>
	    <tr>
	      <th>
	      number
	      </th>
	      <th>
		status
	      </th>
	      <td>
		action
	      </td>
	    </tr>
	  </thead>
	  <tbody>
	    <tr tal:repeat="num xrange(manager['number'])">
	      <td>
		${num}
	      </td>
	      <td>
		Unknown
	      </td>
	      <td>
		<form  action="${request.route_path('switch_on', manager=manager['name'], number=num)}" method='POST'>
		  <input type="hidden" name="csrf_token" value="${request.session.get_csrf_token()}"/>
		  <input type='submit' class='btn btn-success' value='Start !'/>
		</form>
	      </td>
	    </tr>
	  </tbody>
	</table>
      </div>
    </article>
  </div>
</metal:main>
